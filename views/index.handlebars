<div class="container text-center"><h1>Burgers!</h1>
<div class="row">
<div class="col-sm-6"><h2>Burger Waiting Area</h2>
<ul>
  {{#each burgers}}
    {{#unless eaten}}
      {{> burger-block eat=false}}
    {{/unless}}
  {{/each}}
</ul>
</div>
<div class="col-sm-6">
<h2>Devoured Area</h2>

<ul>
  {{#each burgers}}
    {{#if eaten}}
      {{> burger-block eat=true}}
    {{/if}}
  {{/each}}
</ul>
</div>
</div>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="bur">Burger Name:</label>
    <input type="text" id="bur" name="name">
  </div>

  <div class="form-group">
    <label for="eaten">Eaten?</label><br>
    <input type="radio" name="eaten" value="1" checked> Eaten<br>
    <input type="radio" name="eaten" value="0"> Uneaten
  </div>

  <button type="submit">Add Burger</button>
</form>
</div>