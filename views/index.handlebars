<div class="container text-center">
  <div class="container">
    <h1 class="jumbotron bg-danger text-white display-4 shadow-lg">Burgers!</h1>
    <div class="row">
      <div class="col-sm-6">
        <h2 class="title">Burgers waiting to be eaten</h2>
        <ul>
          {{#each burgers}}
          {{#unless eaten}}
          {{> burger-block eat=false}}
          {{/unless}}
          {{/each}}
        </ul>
      </div>
      <div class="col-sm-6">
        <h2 class="title">Devoured Burgers</h2>

        <ul>
          {{#each burgers}}
          {{#if eaten}}
          {{> burger-block eat=true}}
          {{/if}}
          {{/each}}
        </ul>
      </div>
    </div>
<div class="container">
    <h2 class="title">Add a Burger</h2>
    <form class="create-form">

      <div class="form-group">
        <label for="bur">Burger Name:</label>
        <input type="text" id="bur" name="name">
      </div>

      <div class="form-check">
        <label for="eaten">Is the burger eaten?</label><br>
        <input type="checkbox" name="eaten" value="1" checked> Eaten<br>
        <input type="checkbox" name="eaten" value="0"> Uneaten
      </div>
      <br>
      <button class="btn btn-primary" type="submit">Add Burger</button>
      <br>
    </form>
    </div>
  </div>
</div>